<div id="<%= dom_id rsvp %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Adults:</strong>
    <%= rsvp.adults %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Minors:</strong>
    <%= rsvp.minors %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Email:</strong>
    <%= rsvp.email %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Phone number:</strong>
    <%= rsvp.phone_number %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this rsvp", rsvp, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this rsvp', edit_rsvp_path(rsvp), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
